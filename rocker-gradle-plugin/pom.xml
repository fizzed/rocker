<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>rocker-gradle-plugin</artifactId>
    <name>rocker-gradle-plugin</name>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.fizzed</groupId>
        <artifactId>rocker</artifactId>
        <version>2.2.0</version>
    </parent>
    
    <properties>
        <gradle.version>7.4</gradle.version>
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <javadoc.skip>true</javadoc.skip>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>gradle</id>
            <url>https://repo.gradle.org/gradle/libs-releases/</url>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <!-- skip compiling code since gradle will be used -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <skipMain>true</skipMain>
                </configuration>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.fortasoft</groupId>
                <artifactId>gradle-maven-plugin</artifactId>
                <version>1.0.8</version>
                <dependencies>
                    <!-- this helps fix version detection for modern java version -->
                    <dependency>
                        <groupId>org.gradle</groupId>
                        <artifactId>gradle-tooling-api</artifactId>
                        <version>8.12</version>
                    </dependency>
                </dependencies>
                <executions>
                    <!--<execution>
                        <id>gradle-compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>invoke</goal>
                        </goals>
                        <configuration>
                            <gradleVersion>${gradle.version}</gradleVersion>
                            <args>
                                <arg>-Pversion=${project.version}</arg>
                            </args>
                            <tasks>
                                <task>compileJava</task>
                            </tasks>
                        </configuration>
                    </execution>-->
                    <!--
                    <execution>
                        <id>gradle-test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>invoke</goal>
                        </goals>
                        <configuration>
                            <gradleVersion>${gradle.version}</gradleVersion>
                            <args>
                                <arg>-Pversion=${project.version}</arg> 
                            </args>
                            <tasks>
                                <task>compileTestJava</task>
                            </tasks>
                        </configuration>
                    </execution>
                    -->
                    <execution>
                        <id>gradle-deploy</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>invoke</goal>
                        </goals>
                        <configuration>
                            <gradleVersion>${gradle.version}</gradleVersion>
                            <args>
                                <arg>-Pversion=${project.version}</arg> 
                            </args>
                            <tasks>
                                <task>publishPlugins</task>
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gradle-clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>invoke</goal>
                        </goals>
                        <configuration>
                            <gradleVersion>${gradle.version}</gradleVersion>
                            <tasks>
                                <task>clean</task>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <!-- only to force correct build order in maven -->
        <dependency>
            <groupId>com.fizzed</groupId>
            <artifactId>rocker-compiler</artifactId>
        </dependency>
    </dependencies>
</project>
